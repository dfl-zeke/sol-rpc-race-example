{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "esModuleInterop": true,
        "allowJs": true,
        "strict": true,
        "outDir": "dist",
    },
    "lib": [
        "ES2018"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.js"
    ]
}